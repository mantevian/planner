<plan mode="debug">
	<defs>
		<color name="wall" value="#444444" />
		<color name="floor" value="#dddddd" />

		<template name="door" />
		<template name="window" />
	</defs>

	<axes>
		<axis id="1" type="vertical" />
		<axis id="2" type="vertical" offset="2m" />
		<axis id="3" type="vertical" offset="4m" />
		<axis id="4" type="vertical" offset="6m" />

		<axis id="a" type="horizontal" />
		<axis id="b" type="horizontal" offset="2m" />
		<axis id="c" type="horizontal" offset="4m" />
		<axis id="d" type="horizontal" offset="6m" />
	</axes>

	<flat id="2">
		<features>
			<door wall="2 b, 3 a" offset="1m" width="1m" />
			<window wall="1 a, 3 a" offset="1m" width="1m" />
		</features>

		<room>
			<walls>
				<wall from="1 a" to="1 b" thickness="0.1m" />
				<wall to="2 b" thickness="0.5m" />
				<wall to="3 a" thickness="0.5m" />
				<wall thickness="0.5m" />
			</walls>
		</room>
	</flat>
</plan>